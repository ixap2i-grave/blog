.t-blog
  .o-main
    - if flash.now[:danger].present?
      = h(flash.now[:danger])
    = form_for @article do |f|
      = f.text_field :name
      = f.cktext_area :body
      = f.fields_for :article_tag_mappings, id: 'new_article' do |ff|
        = ff.collection_select :tag_id, Tag.all.map{|t| [t.category, t.id]}, {}
      = f.submit '送信'
