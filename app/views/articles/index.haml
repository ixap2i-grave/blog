.t-blog
  .o-side__left
    %ul
      %li
        | sort!
      %li
        \-> .tag?
      - @tags.each do |tag|
        = link_to articles_path q:{article_tag_mapping_id_eq: tag.id} do
          %li
            = tag.category
      %li
        \-> .date?
      - Article.all.each do |article|
        = link_to articles_path q:{created_at_eq: article.created_at} do
          %li
            = article.created_at.strftime('%c')

      %li
        \-> .keyword?
      %li
        Food
      = link_to articles_path do
        %li
          \-> .reset!

  %main.o-main
    - @articles.each do |article|
      %section.m-articleBox
        %h2
          = article.name
        %article.a-label__clamp
          = strip_tags article.body
        %h3
          -# - binding.pry
          -# = article.tag.category
  .o-side__right


